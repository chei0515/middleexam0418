<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:context=".SecondActivity2">

    <View
        android:id="@+id/view7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="#F6F4EF"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <View
        android:id="@+id/view8"
        android:layout_width="wrap_content"
        android:layout_height="80dp"
        android:background="#081A80"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <View
        android:id="@+id/view10"
        android:layout_width="400dp"
        android:layout_height="7dp"
        android:layout_marginTop="128dp"
        android:background="#320C00"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <View
        android:id="@+id/view11"
        android:layout_width="250dp"
        android:layout_height="180dp"
        android:layout_marginStart="150dp"
        android:layout_marginTop="150dp"
        android:background="#0C330D"
        android:backgroundTint="#912119"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <View
        android:id="@+id/view12"
        android:layout_width="400dp"
        android:layout_height="7dp"
        android:layout_marginStart="4dp"
        android:layout_marginTop="355dp"
        android:background="#320C00"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <View
        android:id="@+id/view14"
        android:layout_width="250dp"
        android:layout_height="120dp"
        android:layout_marginStart="150dp"
        android:layout_marginTop="380dp"
        android:background="#081A7F"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <View
        android:id="@+id/view15"
        android:layout_width="400dp"
        android:layout_height="7dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="536dp"
        android:background="#320C00"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <View
        android:id="@+id/view16"
        android:layout_width="200dp"
        android:layout_height="105dp"
        android:layout_marginStart="148dp"
        android:layout_marginBottom="76dp"
        android:background="#320C00"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/txtFood2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="84dp"
        android:fontFamily="sans-serif-black"
        android:text="Main Course"
        android:textColor="#912119"
        android:textSize="34sp"
        app:layout_constraintStart_toStartOf="@+id/txtDrink2"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/txtDrink2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="316dp"
        android:fontFamily="sans-serif-black"
        android:text="Drinks"
        android:textColor="#912119"
        android:textSize="34sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/txtSnack2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="192dp"
        android:fontFamily="sans-serif-black"
        android:text="Snack"
        android:textColor="#912119"
        android:textSize="32sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.018"
        app:layout_constraintStart_toStartOf="parent" />

    <RadioGroup
        android:id="@+id/rgFood"
        android:layout_width="186dp"
        android:layout_height="155dp"
        android:layout_marginStart="160dp"
        android:layout_marginTop="160dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <RadioButton
            android:id="@+id/rbtnSushi"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="sans-serif-black"
            android:text="壽司  $50"
            android:textColor="#F5F3EE"
            android:textSize="24sp" />

        <RadioButton
            android:id="@+id/rbtnTakoyaki"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="sans-serif-black"
            android:text="章魚燒  $10"
            android:textColor="#F5F3EE"
            android:textSize="24sp" />

        <RadioButton
            android:id="@+id/rbtnRamen"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="sans-serif-black"
            android:text="拉麵  $60"
            android:textColor="#F5F3EE"
            android:textSize="24sp" />

    </RadioGroup>

    <RadioGroup
        android:id="@+id/rgDrink"
        android:layout_width="180dp"
        android:layout_height="108dp"
        android:layout_marginTop="76dp"
        app:layout_constraintStart_toStartOf="@+id/rgFood"
        app:layout_constraintTop_toBottomOf="@+id/rgFood">

        <RadioButton
            android:id="@+id/rbtnTea"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="sans-serif-black"
            android:text="紅茶  $20"
            android:textColor="#F5F3EE"
            android:textSize="24sp" />

        <RadioButton
            android:id="@+id/rbtnCola"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="sans-serif-black"
            android:text="可樂  $30"
            android:textColor="#F5F3EE"
            android:textSize="24sp" />

    </RadioGroup>

    <CheckBox
        android:id="@+id/chbFries"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="136dp"
        android:fontFamily="sans-serif-black"
        android:text="薯條  $+15"
        android:textColor="#F5F3EE"
        android:textSize="24sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="@+id/rgDrink" />

    <CheckBox
        android:id="@+id/chbJelly"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="88dp"
        android:fontFamily="sans-serif-black"
        android:text="果凍  +$10"
        android:textColor="#F5F3EE"
        android:textSize="24sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="@+id/rgDrink" />

    <Button
        android:id="@+id/btnOk"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:backgroundTint="#081A7F"
        android:text="OK"
        android:textSize="30sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/totCost"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="sans-serif-black"
        android:text="MENU"
        android:textColor="#F5F3EE"
        android:textSize="48sp"
        app:layout_constraintBottom_toBottomOf="@+id/view8"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0" />

    <ImageView
        android:id="@+id/imageView5"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_marginTop="140dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/pc2" />

    <ImageView
        android:id="@+id/imageView6"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_marginStart="28dp"
        android:layout_marginTop="388dp"
        android:rotation="-9"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/pic0" />

    <ImageView
        android:id="@+id/imageView8"
        android:layout_width="140dp"
        android:layout_height="140dp"
        android:layout_marginTop="564dp"
        android:rotation="-146"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/picccccc" />

</androidx.constraintlayout.widget.ConstraintLayout>